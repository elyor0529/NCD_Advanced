@{
    ViewBag.Title = "Confirm Email";
}

<div class="home form-center">
    <div class="absolute-center">
        <a class="logo-link" href="@Url.Action(string.Empty, "Home")">
            <img src="~/Content/img/spectre.png" />
            <h2>National Criminals Database</h2>
        </a>

        <h4>@ViewBag.Title</h4>

        @if (ViewBag.Error == null)
        {
            <p>
                @if (ViewBag.Message != null)
                {
                    @ViewBag.Message
                }
                else
                {
                    <text>
                        Thank you for confirming your email.
                    </text>
                }

            </p>
        }
        else
        {
            <p class="text-danger">@ViewBag.Error</p>
        }
         
    </div>
</div>
