@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div class="form-center login">
    <div class="absolute-center">
        <a class="logo-link" href="@Url.Action(string.Empty, "Home")">
            <img src="~/Content/img/spectre.png" />
            <h2>National Criminals Database</h2>
        </a>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h4>Use a local account to log in.</h4>

            @Html.ValidationSummary(true,null, new { @class = "text-danger" })

            @Html.TextBoxFor(model => model.Email, new { @class = "form-control responsive", placeholder = "Enter email address" })
            @Html.ValidationMessageFor(model => model.Email)

            @Html.PasswordFor(model => model.Password, new { @class = "form-control responsive", placeholder = "Enter password" })
            @Html.ValidationMessageFor(model => model.Password)
            <br />
            <button type="submit" class="button button-primary responsive spacer">Login</button>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}